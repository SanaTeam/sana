<h1>Posts</h1>

<table>
    <thead>
        <tr>
        <th>Content</th>
        <th>Date</th>
        <th colspan="2"></th>
        </tr>
    </thead>

    <tbody>
        <% @posts.each do |post| %>
        <tr>
            <td><%= post.content %></td>
            <td><%= post.date %></td>
            <td><%= link_to 'Show', show_post_path(:id=> post.id)%></td>
        </tr>
        <% end %>
    </tbody>
</table>