<div class="card">
    <h5 class="card-header"><%= fa_icon "users", text: "Your Organizations" %></h5>
    <div class="card-body">
        <% organizations = Organization.all %>
        <% organizations.each do |organization| %>
            <h5 class="card-title"><%= organization.name%></h5>
            <p>
                <%= link_to(organization) do %>
                    <%= fa_icon "info-circle", text: "Show" %>
                <% end %>
            </p>
        <% end %>

        <%= link_to("/organizations/new", class: "ml-2 d-inline") do %>
            <%= fa_icon "plus", text: "Create" %>
        <% end %>
    </div>
</div>