<div class="card">
    <h5 class="card-header"><%= fa_icon "comments", text: "Your Activity" %></h5>
    <div class="card-body">
        <% posts = Post.all.where(user_id: current_user.id) %>
        <% if posts.size > 0 %>
            <% posts.each do | post | %>
                <h5 class="card-title">
                    <%= post.title %>
                </h5>
                <p>
                    <%= link_to(post) do %>
                        <%= fa_icon "info-circle", text: "Show" %>
                    <% end %>
                    <%= link_to(edit_post_path(post)) do %>
                        <%= fa_icon "pencil", text: "Edit" %>
                    <% end %>
                    <%= link_to(post, method: :delete, data: {confirm: "Are you sure that you want to delete this?"}) do %>
                        <%= fa_icon "bomb", text: "Delete" %>
                    <% end %>
                </p>
            <% end %>
        <% else %>
            <h5>You haven't created any posts yet!</h5>
        <% end %>
        <%= link_to("/posts/new", class: "ml-2 d-inline") do %>
            <%= fa_icon "plus", text: "Create a Post" %>
        <% end %>
    </div>
</div>

