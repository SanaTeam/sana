<div class="container">
    <div class="card-body">
        <div class="row ml-1 mr-1">
            <div class="col-9">
                <h5><%= @user.full_name %></h5>
                <p><%= @user.email %></p>
                <% if @user.id == current_user.id %>
                    <%= button_to "Request Help", new_post_path, :method => "get", class: "btn btn-primary" %>
                    <%= button_to "Offer Help", new_post_path, :method => "get", class: "btn btn-primary mt-2" %>
                    <%= button_to "Register an Organization", new_organization_path, :method => "get", class: "btn btn-primary mt-2" %>
                <% else %>
                    <%= render '/layouts/match_form', match: Match.new, user1_id: current_user.id, user2_id: @user.id, post_id: -1 %>
                <% end %> 
            </div>
            <div class="col-3 text-center">
                <div>
                    <%= get_picture(@user, "", 80) %>
                </div>
                <% if @user.id == current_user.id %>
                    <div class="mt-3">
                        <%= link_to("https://en.gravatar.com", class: "ml-2 d-inline a text-reset") do %>
                            <span class="text-blue"><%= fa_icon "file-photo-o", text: "Edit Avatar" %></span>
                        <% end %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>