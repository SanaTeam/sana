<div class="position-absolute toasts mt-5 p-4">
    <div class="notifs" data-controller="notify" data-user="<%= current_user ? current_user.id : -1 %>">
    </div>
</div>

<% if notice %>
    <div class="alert alert-primary mb-4" role="alert" id="notice">
        <strong><%= fa_icon "exclamation-circle", text: "Info: " %></strong><%= notice %>
    </div>
<% elsif alert %> 
    <div class="alert alert-warning mb-4" role="alert" id="alert">
        <strong><%= fa_icon "exclamation-triangle", text: "Warning! " %></strong><%= alert %>
    </div>
<% else %> 
<% end %>