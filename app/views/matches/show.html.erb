<% @match.messages.each do |message| %>
    <div class="row">
        <div class="card w-50 <%=message.user_id == current_user.id ? "mr-auto" : "ml-auto" %>">
            <div class="card-body">
                <strong><%= User.find(message.user_id).first_name %></strong>: <%= message.content %>
                <% if owns_model?(message) %>        
                    <div><%= render "/layouts/operations",  edit_route: "", destroy_route: message %></div>
                <% end %>
            </div>
        </div>
    </div>
    <br>
<% end %>

<%= render 'form', post: Message.new %>